<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="5dp"
        />
    <gradient
        android:angle="45"
        android:centerX="100%"
        android:centerColor="@color/azulFace"
        android:startColor="@color/colorAccent"
        android:endColor="@color/azulFace"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="200dp"
        android:height="100dp"
        />
    <stroke
        android:width="3dp"
        android:color="@color/yellow"
        />
</shape>